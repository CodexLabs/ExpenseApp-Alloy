<Alloy>
	<Window>
		<Toolbar class="TopToolbar">
			<Button class="ToolbarButtonLeft" id="btnBack" onClick="btnBackCallback">Overview</Button>
		</Toolbar>
		<ScrollView>
			<TextField id="monthPicker" />
			<TextField id="txtFirstName" value="{Employee.firstName}" />
			<TextField id="txtLastName" value="{Employee.lastName}" />
			<TextField id="txtEmployeeNumber" value="{Employee.employeeNumber}"  />
			<TextField id="unitPicker" value="{Employee.unitId}" />
			<TextField id="txtEmail" value="{Employee.email}"  />
		</ScrollView>
		<Toolbar class="BottomToolbar">
			<Button class="ToolbarButtonRight" id="btnNext" onClick="btnNextCallback">Next</Button>
		</Toolbar>
	</Window>
</Alloy>